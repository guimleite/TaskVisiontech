@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="./css/style.css"

<section class="Form my-4 mx-5">
    <div class="container">
        <div class="row no-gutters">
            <div class="logo-div col-lg-5">
                <img src="./img/app_main_logo.png" class="img-fluid" alt="Wallet icon" width="320" height="320">
            </div>
            <div class="col-lg-7 px-5 pt-5">
                <h1 class="col-lg-5">Login</h1>
                <form>
                    <br>
                    <div class="form-row">
                        <div class="col-lg-7">
                            <input type="email" class="form-control my-3 p-2" placeholder="E-mail">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-7">
                            <input type="password" class="form-control my-3 p-2" placeholder="********">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-7">
                            <button type="button" class="btn1 mt-3 mb3">Login</button>
                        </div>
                    </div>
                    <a href="#" >Forgot Password?</a>    
                    <a href="#" >Activate Account</a>
                </form>

            </div>
        </div>
    </div>
</section>